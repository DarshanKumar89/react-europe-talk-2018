class Animation extends Component {
  constructor(props) {
    super(props);

    this.state = {
      x: 0,
      y: 0,
    };
  }

  componentDidMount() {
    this.tick();
  }

  tick() {
    window.requestAnimationFrame(() => {
      this.setState(
        state => ({
          x: state.x + 1,
          y: state.y + 1,
        }),
        this.tick
      );
    });
  }

  render() {
    const { x, y } = this.state;

    return (
      <Canvas
        width={200}
        height={200}
        style={{ outline: '1px solid' }}
        draw={ctx => {
          ctx.clearRect(0, 0, 200, 200);
          ctx.fillStyle = 'hotpink';
          ctx.fillRect(x, y, 50, 50);
        }}
      />
    );
  }
}

render(<Animation />);
